# Application
DEBUG=true

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_chat

# Redis
REDIS_URL=redis://localhost:6379

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Admin (for initial setup)
ADMIN_API_KEY=your-secure-admin-key-here

# Experimentation
# Leave empty to auto-select first active experiment from DB
ACTIVE_EXPERIMENT_KEY=

# Streaming limits (backpressure control)
MAX_CONCURRENT_STREAMS_PER_USER=5
STREAM_TIMEOUT_SECONDS=120
LLM_RESPONSE_TIMEOUT_SECONDS=60

# CORS (for production)
FRONTEND_URL=http://localhost:5173
